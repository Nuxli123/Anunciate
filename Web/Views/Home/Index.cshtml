@model  anunciate.Domain.Virtual.Request.LoginRequest
@{
    //Layout = null;
}


<style>
    .alertas {
        display: inline;
        padding: .2em .6em .3em;
        font-size: 75%;
        font-weight: 700;
        line-height: 1;
        color: #fff;
        text-align: center;
        white-space: nowrap;
        vertical-align: baseline;
        border-radius: .25em;
    }
</style>
<!DOCTYPE html>

<html>
<head>
    <link href="~/css/estilosLogin.css" rel="stylesheet" />
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <center>
        <div style="background-color:transparent !important;color:#fff;">
          
            <img src="~/images/logoanunciate.png" />
        </div>
     
        <form asp-controller="Home" asp-action="Index" method="post">

            <div class="card">
                <div class="row">
                    <div class="col-md-12">
                        <section>

                            <h2 style="color:#000000">Iniciar sesión</h2>
                            <div asp-validation-summary="All" class="alertas" style="font:bold;"></div>
                            <hr />
                            <div class="form-group text-left">
                                <label style="color:#000000">Usuario:</label>
                                <input asp-for="UsuarioEmail" class="form-control" />
                                <span asp-validation-for="UsuarioEmail" class="alertas" />
                            </div>
                            <div class="form-group text-left">
                                <label style="color:#000000">Contraseña:</label>
                                <input asp-for="Password" class="form-control" />
                                <span asp-validation-for="Password" class="alertas" style=""></span>
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn btn-danger">Iniciar sesión</button>
                            </div>

                        </section>
                    </div>
                </div>
            </div>
        </form>
    </center>
</body>
</html>